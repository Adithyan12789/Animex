                <h3>Add Address</h3>
                <form action="/addAddress" method="POST">
                  <div class="form-group ">
                    <label>Address <span class="required">*</span></label>
                    <input required="" class="form-control square" name="address1" type="text" oninput="validateAddress(this)">
                    <div class="error-message" id="address-error"></div>
                </div>
                <div class="form-group ">
                    <label>Street Address <span class="required">*</span></label>
                    <input required="" class="form-control square" name="address2" type="text" oninput="validateStreet(this)">
                    <div class="error-message" id="street-error"></div>
                </div>
                <div class="form-group">
                    <label>City <span class="required">*</span></label>
                    <input required="" class="form-control square" name="city" type="text" oninput="validateCity(this)">
                    <div class="error-message" id="city-error"></div>
                </div>
                <div class="form-group">
                    <label>State <span class="required">*</span></label>
                    <input required="" class="form-control square" name="state" type="text" oninput="validateState(this)">
                    <div class="error-message" id="state-error"></div>
                </div>
                <div class="form-group ">
                    <label>ZIP Code <span class="required">*</span></label>
                    <input required="" class="form-control square" name="postalCode" type="text" oninput="validateZIP(this)">
                    <div class="error-message" id="zip-error"></div>
                </div>
                <div class="form-group ">
                    <label>Country <span class="required">*</span></label>
                    <input required="" class="form-control square" name="country" type="text" oninput="validateCountry(this)">
                    <div class="error-message" id="country-error"></div>
                </div>
