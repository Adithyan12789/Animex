		<div class="colorlib-product">
			<div class="container">
				<div class="row row-pb-lg product-detail-wrap">
					<div class="col-sm-8">
						<div class="owl-carousel">
							<% for(i=0;i<product.image.length;i++){ %>
							<div class="item">
								<div class="product-entry border">
									<a href="#" class="prod-img">
										<img src="/static/uploads/<%= product.image[i] %>" class="img-fluid" alt="Free html5 bootstrap 4 template">
									</a>
								</div>
							</div>
							<% } %>
						</div>
					</div>
					<div class="col-sm-4">
						<div class="product-desc">
							<h3 style="padding-top: 30px;"><%= product.name %></h3>
							<h3 style="padding-top: 15px;"><%= product.category.name %></h3>
							<p class="price mt-4">
								<span>₹<%= product.price %></span> 
								<span class="rate">
									<i class="icon-star-full"></i>
									<i class="icon-star-full"></i>
									<i class="icon-star-full"></i>
									<i class="icon-star-full"></i>
									<i class="icon-star-half"></i>
									(74 Rating)
								</span>
							</p>
							<p style="padding-top: 30px;"><%= product.description %></p>

							<p>Availability:
								<span class="availability-text <%= product.stock < 1 ? 'text-danger' : (product.stock === 1 ? 'text-danger' : 'text-success') %> ml-5">
									<%= product.stock < 1 ? 'Out of stock' : (product.stock === 1 ? '1 item in stock' : product.stock + ' items in stock') %>
								</span>
							</p>
						</div>
                     
                  	<div class="row">
	                  	<% if (product.stock > 0) { %>
							<div class="col-sm-12 text-right ml-4 mt-4">
								<button class="btn btn-primary view-details mb-4" style="width: 100%; " onclick="wishlist('<%= product._id %>')">
									Add to Wishlist
								</button>
								<button class="btn btn-primary view-details" style="width: 100%;" onclick="cart('<%= product._id %>')">
									Add to Cart
								</button>										
							</div>
							<% } %>
					</div>
				</div>

				
			</div>
		</div>

		<div class="row">
			<div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
