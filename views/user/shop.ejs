<script>
    function cart(id) {
        Swal.fire({
            title: "Successfully add to cart!",
            showCancelButton: false,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "ok"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/addTocart/" + id;
            }
        });
    }
</script>

