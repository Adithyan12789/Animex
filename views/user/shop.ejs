    <div class="breadcrumbs-two">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="breadcrumbs-img" style="background-image: url(/static/images/ROMAN-SHIRT-1.webp);">
                        <h2>Men's</h2>
                    </div>
                    <div class="menu text-center">
                        <p><a href="#">New Arrivals</a> <a href="#">Best Sellers</a> <a href="#">Popularity</a> <a href="#">Featured</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="colorlib-product">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-xl-12">
                    <div class="row row-pb-md" style="justify-content: end;">
                        <div class="col-lg-3 col-xl-3">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="side border mb-1">
                                        <h3>Category</h3>
                                        <hr>
                                        <ul>
                                            <% categories.forEach(category => { %>
                                            <li>
                                                <a href="/shop?category=<%= category._id %>" class="<%= selectedCategory ==  category._id ? 'actives' : '' %>">
                                                    <%= category.name %>
                                                </a>
                                            </li>
                                            <% }) %>
                                        </ul>                                        
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="side border mb-1">
                                        <h3>Sort</h3>
                                        <hr>
                                        <ul>
                                            <li><a href="/priceFilter/<%= categories._id %>?sort=lowToHigh" class="<%= sort === 'lowToHigh' ? 'actives' : '' %>">Price: low to high</a></li>
                                            <li><a href="/priceFilter/<%= categories._id %>?sort=highToLow" class="<%= sort === 'highToLow' ? 'actives' : '' %>">Price: high to low</a></li>
                                            <li><a href="#">Average ratings</a></li>
                                            <li><a href="#">aA - zZ</a></li>
                                            <li><a href="#">zZ - aA</a></li>
                                        </ul>                                                                                                                     
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Display products -->
                        <% products.forEach(product => { %> 
                        <div class="col-md-3 col-lg-3 mb-4 text-center">
                            <div class="product-entry border">
                                <a href="/product-details/<%= product._id %>">
                                    <div class="prod-img">
                                        <img src="/static/uploads/<%= product.image[0] %>" class="img-fluid" alt="Free html5 bootstrap 4 template">
                                    </div>
                                </a>
                                <div class="desc">
                                    <h2><a href="#"><%= product.name %></a></h2>
                                    <% if (product.category) { %>
                                    <h2><a href="#"><%= product.category.name %></a></h2>
                                    <% } else { %>
                                    <p>No category</p>
                                    <% } %>
                                    <span class="price">â‚¹<%= product.price %></span>
                                    <!-- Inside the loop where you display products -->
                                    <div class="rating">
                                        <!-- Static rating for demonstration purposes -->
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star"></span>
                                        <span class="fa fa-star"></span>
                                    </div>
                                    <!-- Inside the loop where the "View Details" button is generated -->
												<% if (product.stock <= 0) { %>
													<p class="out-of-stock-message">Out of Stock</p>
												<% } else { %>
													<div class="buttons">
														<button class="btn btn-primary view-details" onclick="cart('<%= product._id %>')">Add to Cart <i class="fas fa-cart-plus"></i></button>
														<button class="btn btn-primary view-details" onclick="wishlist('<%= product._id %>')"><i class="fa-solid fa-heart" style="color: crimson;"></i></button>
													</div>
												<% } %> 
                                </div>
                            </div>
                        </div>
                        <% }) %>
                        <!-- Pagination -->
                        <div class="col-md-12 text-center">
                            <div class="block-27">
                                <ul>
                                    <li><a href="/shop?page=<%= currentPage - 1 %>"><i class="ion-ios-arrow-back"></i></a></li>
                                    <% for(i = 1 ; i <= totalPages ; i++){ %>
                                    <li class="<%= currentPage == i ? "active": "" %> ">
                                        <a href="/shop?page=<%= i %>"><span><%= i %></span></a>
                                    </li>
                                    <% } %>
                                    <li><a href="/shop?page=<%= currentPage + 1 %>"><i class="ion-ios-arrow-forward"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="colorlib-partner">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
                    <h2>Trusted Partners</h2>
                </div>
            </div>
