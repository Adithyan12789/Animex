    <style>
        .rating {
            margin-top: 10px;
            margin-bottom: 20px;
        }

        .checked {
            color: yellow;
        }

        .prod-img {
            position: relative;
            display: inline-block;
            overflow: hidden;
        }

        .prod-img:hover img {
            transform: scale(1.1);
            transition: transform 0.3s ease;
        }

        .side.border.mb-1 ul li a {
            color: black;
            font-weight: 500;
            display: block;
            padding: 10px;
            transition: all 0.3s ease;
        }

        .side.border.mb-1 ul li a:hover {
            background-color: #f8f9fa;
        }

        hr {
            margin: 20px 20px;
            background-color: aquamarine;
            font-weight: 500;
            height: 1px;
        }
        .active{
            color: aquamarine;
        }
        .out-of-stock-message {
    font-weight: bold;
    color: #ff0000; /* Red color */
    font-size: 18px;
    animation: pulse 1s infinite alternate; /* Add a pulsating animation */
}

@keyframes pulse {
    from {
        transform: scale(1);
    }
    to {
        transform: scale(1.1);
    }
}
    </style>
</head>
