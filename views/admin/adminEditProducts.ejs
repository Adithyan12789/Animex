    <main class="main-wrap">
        <!-- Form to add a new product -->
        <div class="container custom-container"> <!-- Added custom-container class -->
            <div class="row">
                <div class="col-lg-12 mt-4">
                    <div class="card">
                        <div class="card-header bg-primary text-light">
                            <h3>Edit Product</h3>
                        </div>
                        <div class="card-body">
                            <form action="/adminUpdateProduct/<%= product._id %>" method="post" enctype="multipart/form-data">
                                <div class="mb-4">
                                    <label class="form-label">Product title</label>
                                    <input type="text" placeholder="Type here" value="<%= product.name %>" name="name" class="form-control" id="product_name" required onkeyup="validateName()">
                                   <span id="name-error" style="font-size: 14px;"></span>

                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea placeholder="Type here"  class="form-control" name="description" rows="4" id="product_description" required onkeyup="validateDescription()"><%= product.description %></textarea>
                                    <span id="description-error" style="font-size: 14px;"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="category" class="form-label">Category</label>
                                    <select id="category" name="category" class="form-select">
                                        <% category.forEach(category => { %>
                                            <option value="<%= category._id %>"><%= category.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                 <div class="mb-3">
                                    <label for="brand" class="form-label">Brands</label>
                                    <select id="brand" name="brand" class="form-select">
                                        <% brand.forEach(brand => { %>
                                            <option value="<%= brand._id %>"><%= brand.name %></option>
                                        <% }) %>
                                    </select>
                                </div>                                
                                <div class="mb-4">
                                    <label class="form-label">New Cost</label>
                                    <input type="text" placeholder="₹00.0" value="<%= product.price %>" name="price" class="form-control" id="product_price" required onkeyup="validatePrice()"> <!-- Corrected function name -->
                                    <span id="price-error" style="font-size: 14px;"></span> <!-- Corrected ID -->
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Stocks</label>
                                    <input type="text" placeholder="stocks" value="<%= product.stock %>" name="stock" class="form-control" id="product_stock" required onkeyup="validateStock()"> <!-- Corrected function name -->
                                    <span id="stock-error" style="font-size: 14px;"></span> <!-- Corrected ID -->
                                </div>
                                <div class="mb-3">
                                    <label for="image" class="form-label">Select Image</label>
                                    <input type="file" id="image" name="image" class="form-control" multiple>
                                    <!-- Display existing images -->
                                    <% product.image.forEach((image, index) => { %>
                                            <img class="img-fluid small-image" src="/static/uploads/<%= image %>" alt="Product Image">
                                    <% }) %>
                                </div>                                                             
                                <div class="mb-3">
