<script>
function validateForm() {
var valid = true;
var couponCode = document.getElementById("coupon_code").value.trim();
var description = document.getElementById("product_description").value.trim();
var percentage = document.getElementById("coupon_percentage").value.trim();
var minAmount = document.getElementById("minimumAmount").value.trim();
var maxAmount = document.getElementById("maximumAmount").value.trim();
var expDate = document.getElementById("coupon_exp_date").value.trim();

if (couponCode === "") {
    document.getElementById("name-error").innerHTML = "Coupon code is required";
    valid = false;
} else {
    document.getElementById("name-error").innerHTML = "";
}

if (description === "") {
    document.getElementById("descriptionError").innerHTML = "Description is required";
    valid = false;
} else {
    document.getElementById("descriptionError").innerHTML = "";
}

if (percentage === "") {
    document.getElementById("percentageError").innerHTML = "Percentage is required";
    valid = false;
} else {
    document.getElementById("percentageError").innerHTML = "";
}

if (minAmount === "") {
    document.getElementById("minAmountError").innerHTML = "Minimum amount is required";
    valid = false;
} else {
    document.getElementById("minAmountError").innerHTML = "";
}

if (maxAmount === "") {
    document.getElementById("maxAmountError").innerHTML = "Maximum discount amount is required";
    valid = false;
} else {
    document.getElementById("maxAmountError").innerHTML = "";
}

if (expDate === "") {
    document.getElementById("expDateError").innerHTML = "Expiration date is required";
    valid = false;
} else {
    document.getElementById("expDateError").innerHTML = "";
}

return valid;
}
</script>
