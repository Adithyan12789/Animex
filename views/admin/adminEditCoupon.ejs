    <script>
        function validateForm() {
            var couponCode = document.getElementsByName("coupon_code")[0].value.trim();
            var description = document.getElementsByName("description")[0].value.trim();
            var percentage = document.getElementsByName("percentage")[0].value.trim();
            var minimumAmount = document.getElementsByName("minimumAmount")[0].value.trim();
            var maximumAmount = document.getElementsByName("maximumAmount")[0].value.trim();
            var expiryDate = document.getElementsByName("expiryDate")[0].value.trim();
            var couponCodeError = document.getElementById("coupon-code-error");
            var descriptionError = document.getElementById("description-error");
            var percentageError = document.getElementById("percentage-error");
            var minimumAmountError = document.getElementById("minimum-amount-error");
            var maximumAmountError = document.getElementById("maximum-amount-error");
            var expiryDateError = document.getElementById("expiry-date-error");
            var submitError = document.getElementById("submit-error");
            var isValid = true;

            // Reset error messages
            couponCodeError.textContent = "";
            descriptionError.textContent = "";
            percentageError.textContent = "";
            minimumAmountError.textContent = "";
            maximumAmountError.textContent = "";
            expiryDateError.textContent = "";
            submitError.textContent = "";

            // Validate coupon code
            if (couponCode === "") {
                couponCodeError.textContent = "Coupon code is required";
                isValid = false;
            } else if (!isValidCouponCode(couponCode)) {
                couponCodeError.textContent = "Invalid coupon code format";
                isValid = false;
            }

            // Validate description
            if (description === "") {
                descriptionError.textContent = "Description is required";
                isValid = false;
            }

            // Validate percentage
            if (percentage === "") {
                percentageError.textContent = "Percentage is required";
                isValid = false;
            } else if (isNaN(percentage) || parseFloat(percentage) <= 0 || parseFloat(percentage) > 100) {
                percentageError.textContent = "Invalid percentage value";
                isValid = false;
            }

            // Validate minimum amount
            if (minimumAmount === "") {
                minimumAmountError.textContent = "Minimum amount is required";
                isValid = false;
            } else if (isNaN(minimumAmount) || parseFloat(minimumAmount) < 0) {
                minimumAmountError.textContent = "Invalid minimum amount value";
                isValid = false;
            }

            // Validate maximum amount
            if (maximumAmount === "") {
                maximumAmountError.textContent = "Maximum amount is required";
                isValid = false;
            } else if (isNaN(maximumAmount) || parseFloat(maximumAmount) < 0) {
                maximumAmountError.textContent = "Invalid maximum amount value";
                isValid = false;
            }

            // Validate expiry date
            if (expiryDate === "") {
                expiryDateError.textContent = "Expiry date is required";
                isValid = false;
            } else if (!isValidExpiryDate(expiryDate)) {
                expiryDateError.textContent = "Expiry date should be in the future";
                isValid = false;
            }

            if (!isValid) {
                submitError.textContent = "Please fix the errors before submitting";
            }

            return isValid;
        }

        function isValidCouponCode(code) {
            // Add your validation logic for coupon code here
            return /^[A-Za-z0-9]+$/.test(code);
        }

        function isValidExpiryDate(date) {
            // Add your validation logic for expiry date here
            var currentDate = new Date();
            var selectedDate = new Date(date);
            return selectedDate > currentDate;
        }
    </script>

