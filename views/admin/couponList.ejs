    <section class="content-main">
        <div class="content-header">
            <div>
              <h2 class="content-title card-title">Coupon List </h2>
              <p>Add, edit or list/unlist a Coupon</p>
            </div>
            <div>
              <input type="text" placeholder="Search Coupon" class="form-control bg-white">
              <!-- Add Category Button -->
              <button class="btn btn-primary" onclick="window.location.href='/addCoupon'">Add Coupon</button>
            </div>
          </div>
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-md-12">
                  <div class="table-responsive">
                    <table class="table">
                      <thead class="thead-light">
                          <tr>
                              <th>Index</th>
                              <th>Coupon Code</th>
                              <th>Description</th>
                              <th>%</th>
                              <th>Up to</th>
                              <th>Max amount</th>
                              <th>Exp date</th>
                              <th>status</th>
                              <th>List/Unlist</th>
                              <th>Edit</th>
                          </tr>
                      </thead>
                      <tbody> <!-- Move this tag outside of the loop -->
                          <% coupons.forEach((row,index) => { %>
                          <!-- Table data goes here -->
                          <tr>
                              <td><%= index+1  %></td>
                              <td><%= row.coupon_code  %></td>
                              <td><%= row.description %></td>
                              <td><%= row.percentage  %>%</td>
                              <td>₹<%= row.minimumAmount  %></td>
                              <td>₹<%= row.maximumAmount  %></td>
                             <td><%=new Date(row.expiryDate).toLocaleDateString() %></b></td>
                                <% if (row.isListed) { %>
                                    <td><span class="badge rounded-pill alert-success">listed</span></td> 
                                    <% }else{ %>
                                        <td><span class="badge rounded-pill alert-danger">unlisted</span></td>
                                      <% } %>
                                    <% if(row.isListed) { %>
                                        <td><button style="width: 90%;" class="btn btn-sm btn-danger" onclick="unlisted('<%= row._id %>')">UnList</button></td>
                                    <% } else { %>
                                        <td><button style="width: 90%;" class="btn btn-sm btn-success" onclick="listed('<%= row._id %>')">List</button></td>
                                    <% } %>
          
                                <td><a href="/editCoupon/<%= row._id  %>" class="btn btn-primary btn-sm rounded">Edit</a></td>
                            </tr>
                            <% }) %>
                        </tbody> <!-- Move this tag outside of the loop -->
                    </table>
                  </div>
                </div>
